[Unit]
Description=BNEP server
Requires=sys-subsystem-net-devices-bneps.device
After=sys-subsystem-net-devices-bneps.device
BindsTo=sys-subsystem-net-devices-bneps.device
After=bluetooth.service
PartOf=bluetooth.service

[Service]
Type=simple
ExecStart=/usr/bin/bt-network -s nap bneps

[Install]
WantedBy=multi-user.target

